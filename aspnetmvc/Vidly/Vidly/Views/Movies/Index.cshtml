@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movie</h2>

<table class="table table-bordered table-hover">
    @Html.ActionLink("New Movie", "NewMovie", "Movies", null, new { @class = "btn btn-primary"})
    <tr><th>Name</th><th>Genre</th></tr>
    @foreach(var movie in Model)
    {   
        
        <tr><td> @Html.ActionLink(movie.Name, "EditMovie", "Movies", new { Id = movie.Id }, null)</td><td>@movie.Genres.Name</td></tr>
    }
</table>

